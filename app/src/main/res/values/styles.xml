<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/TU_BLUE</item>
        <item name="colorPrimaryDark">@color/TU_DARK_GRAY</item>
        <!--<item name="colorAccent">#FF4081</item>
        <item name="android:windowBackground">@android:color/white</item>-->
    </style>

    <style name="cardHeaderTitleText">
        <item name="android:textColor">@color/BLACK</item>
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardHeaderSubTitleText">
        <item name="android:textColor">@color/gray_700</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="cardHeaderTimeText">
        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardHeaderAddressText">
        <item name="android:textColor">@drawable/address_click_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardHeaderDetailText">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardListTitleText">
        <item name="android:textColor">@color/gray_600</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardListTimeText">
        <item name="android:textColor">@color/material_blue_grey_800</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="cardButtonText">
        <item name="android:textColor">@drawable/address_click_selector</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>
